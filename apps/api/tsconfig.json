{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strictNullChecks": true,
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
